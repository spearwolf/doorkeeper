{
  "name": "doorkeeper",
  "version": "1.0.0",
  "description": "node.js based http auth service using json web tokens",
  "type": "module",
  "scripts": {
    "prettier:check": "prettier --check ./lib doorkeeper.js",
    "prettier:write": "prettier --write ./lib doorkeeper.js",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint": "run-s eslint prettier:check",
    "fix": "run-s eslint:fix prettier:write",
    "test": "zx ./scripts/testInMemory.mjs",
    "test:redis": "zx ./scripts/testRedis.mjs",
    "test:redis:run": "docker-compose up --abort-on-container-exit --exit-code-from tests --remove-orphans",
    "test:all": "run-s test test:redis:run",
    "start": "node doorkeeper.js",
    "nodemon": "nodemon 'npm start'",
    "docker:build": "docker build -t spearwolf/doorkeeper:latest -f Dockerfile .",
    "docker:run": "docker run -it --rm spearwolf/doorkeeper:latest",
    "docker:run:shell": "docker run -it --rm --entrypoint /bin/sh spearwolf/doorkeeper:latest",
    "docker:start": "docker run -d -it --rm spearwolf/doorkeeper:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spearwolf/doorkeeper.git"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spearwolf/doorkeeper/issues"
  },
  "homepage": "https://github.com/spearwolf/doorkeeper#readme",
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-problems": "^6.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "zx": "^4.2.0"
  },
  "dependencies": {
    "blueimp-md5": "^2.19.0",
    "body-parser": "^1.19.1",
    "colors": "^1.4.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "redis": "^4.0.1"
  }
}
